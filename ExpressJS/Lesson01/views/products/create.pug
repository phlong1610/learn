extends ../layout/common
block content  
    h1 Create new product
    if errors
        each error in errors
            .alert.alert-danger= error
    form(action="/products/create", method="POST")
        label Name
        input.form-control.mb-3(type="text", name="name", value=values ? values.name : '' )
        label Price
        input.form-control.mb-3(type="text", name="price", value=values ? values.prices : '')
        button.btn.btn-primary Create