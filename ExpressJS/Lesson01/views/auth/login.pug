extends ../layout/common
block content  
    h1 Sign in
    if errors
        each error in errors
            .alert.alert-danger= error
    form(method="POST")
        label Email
        input.form-control.mb-3(type="text", name="email", value=values ? values.email : '' )
        label Password
        input.form-control.mb-3(type="password", name="password", value=values ? values.password : '')
        button.btn.btn-primary Login